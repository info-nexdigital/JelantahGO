    // ROI calculator with Indonesian currency formatting
    (function(){
      const litersInput = document.getElementById('roiLiters');
      const btn = document.getElementById('roiBtn');
      const resultEl = document.getElementById('roiResult');

      function pricePerLiter(liters){
        if (liters >= 200) return 7000;
        if (liters >= 100) return 6500;
        if (liters >= 40) return 6000;
        return 0;
      }

      function formatIDR(num){
        return new Intl.NumberFormat('id-ID', { 
          style: 'currency', 
          currency: 'IDR', 
          maximumFractionDigits: 0 
        }).format(num);
      }

      function calc(){
        const liters = Math.max(0, Math.floor(Number(litersInput.value) || 0));
        
        if (liters < 40) { 
          resultEl.textContent = 'Minimal 40 liter untuk penjemputan.'; 
          return; 
        }

        const p = pricePerLiter(liters);
        const revenue = liters * p;
        const affiliatePerL = 200;
        const affiliateTotal = liters * affiliatePerL;

        resultEl.textContent = `Estimasi pendapatan: ${formatIDR(revenue)} • Harga: ${formatIDR(p)} /L` +
          ` • (Komisi afiliasi potensial: ${formatIDR(affiliateTotal)})`;
      }

      btn.addEventListener('click', calc);
      litersInput.addEventListener('keydown', function(e){ 
        if (e.key === 'Enter') calc(); 
      });
